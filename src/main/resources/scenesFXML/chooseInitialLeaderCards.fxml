<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<StackPane fx:id="stackPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <AnchorPane>

   <AnchorPane fx:id="scrollPane" prefHeight="600.0" prefWidth="800.0">
      <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true">
         <Image url="@../images/graphicstuff/scrollMenu.png"/>
      </ImageView>
      <AnchorPane fx:id="paneOnTheScroll" prefHeight="600.0" prefWidth="800.0">

         <Button fx:id="startButton"  mnemonicParsing="false" text="Let's go"
                 textAlignment="CENTER" textFill="#ff9901">
            <font>
               <Font name="Algerian" size="12.0"/>
            </font>
         </Button>

         <HBox fx:id="leaderHorizontalPane"  spacing="20.0">

            <VBox fx:id="vbox1" prefHeight="150.0" prefWidth="67.0">
               <ImageView fx:id="leaderCard1" fitHeight="201.0" fitWidth="170.0" pickOnBounds="true"
                          preserveRatio="true"/>
               <CheckBox fx:id="firstCheck" alignment="CENTER" contentDisplay="GRAPHIC_ONLY"
                         mnemonicParsing="false"  opacity="0.7" prefHeight="42.0"
                         prefWidth="134.0" textFill="#d43737">
                  <padding>
                     <Insets left="59.0"/>
                  </padding>
               </CheckBox>
            </VBox>

            <VBox fx:id="vbox2" prefHeight="150.0" prefWidth="69.0">
               <ImageView fx:id="leaderCard2" fitHeight="201.0" fitWidth="170.0" pickOnBounds="true"
                          preserveRatio="true"/>
               <CheckBox fx:id="secondCheck" alignment="CENTER" mnemonicParsing="false"
                          opacity="0.7" prefHeight="42.0"
                         prefWidth="134.0"
                         textFill="#d43737">
                  <padding>
                     <Insets left="59.0"/>
                  </padding>
               </CheckBox>
            </VBox>

            <VBox fx:id="vbox3" prefHeight="150.0" prefWidth="69.0">
               <ImageView fx:id="leaderCard3" fitHeight="201.0" fitWidth="170.0" pickOnBounds="true"
                          preserveRatio="true"/>
               <CheckBox fx:id="thirdCheck" alignment="CENTER" contentDisplay="GRAPHIC_ONLY"
                         mnemonicParsing="false" opacity="0.7" prefHeight="42.0"
                         prefWidth="134.0" textFill="#d43737">
                  <padding>
                     <Insets left="59.0"/>
                  </padding>
               </CheckBox>
            </VBox>

            <VBox fx:id="vbox4" prefHeight="150.0" prefWidth="68.0">
               <ImageView fx:id="leaderCard4" fitHeight="201.0" fitWidth="170.0" pickOnBounds="true"
                          preserveRatio="true"/>
               <CheckBox fx:id="fourthCheck" alignment="CENTER" mnemonicParsing="false"
                         opacity="0.7" prefHeight="42.0"
                         prefWidth="134.0"
                         textFill="#d43737">
                  <padding>
                     <Insets left="59.0"/>
                  </padding>
               </CheckBox>
            </VBox>
         </HBox>

         <Label fx:id="labelChoose" prefHeight="18.0" prefWidth="179.0" text="Choose two Leaders:"
                textAlignment="CENTER">
            <font>
               <Font name="Algerian" size="15.0"/>
            </font>
         </Label>

      </AnchorPane>
   </AnchorPane>
   </AnchorPane>
</StackPane>
